---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Cart">
  <my-container>
    <div class="cart-list">
      <h2>您的購物車</h2>
    </div>
    <div class="summary">
      <h2>訂單摘要</h2>
      <div class="summary-items">
        <p>小計</p>
        <p>NT$ 2,700</p>
        <p>運費</p>
        <p>NT$ 300</p>
        <p class="total">總計</p>
        <p class="total">NT$ 3,000</p>
      </div>
      <div class="btn-payment"><a href="#">結帳</a></div>
    </div>
  </my-container>
  <style>
    my-container {
      display: flex;
      gap: 1.25rem;
    }
    .cart-list {
      background: var(--bg-light);
      text-align: center;
      width: 38.75rem;
      color: #3f5d45;
    }
    .summary {
      color: #eaf0ed;
      background: var(--bg-dark);
      width: 300px;
      display: flex;
      flex-direction: column;
      h2 {
        text-align: center;
        border-bottom: 1px solid #eaf0ed;
        margin: 0 1.25rem 1rem 1.25rem;
        padding: 1rem;
      }
    }

    .summary-items {
      display: grid;
      grid-template-columns: 1fr 1fr;
      padding: 1rem;
      p {
        margin: 0;
      }
      .total {
        font-weight: bold;
      }
    }
    .btn-payment {
      background: #ffe180;
      height: 4.06rem;
      display: flex;
      justify-content: center;
      align-items: center;
      a {
        color: #3f5d45;
        font-size: 1.5rem;
        font-weight: bold;
        text-decoration: none;
      }
    }
  </style>
</Layout>
